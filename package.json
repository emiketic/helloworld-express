{
  "private": true,
  "name": "emiketic-starter-express",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "./scripts/postinstall.sh",
    "lint": "eslint --ext .js ./",
    "lint:critical": "eslint --no-eslintrc --config .eslintrc.critical.json ./",
    "format": "npm run format:all ; npm run format:js",
    "format:all": "prettier ./**/*.{md,json,js,css,scss} --write",
    "format:js": "eslint --ext .js --fix ./ ; exit 0",
    "test": "npm run test:unit ; npm run test:integration",
    "test:unit": "jest \\.unit\\.test\\.",
    "test:integration": "jest \\.integration\\.test\\.",
    "test:any": "jest",
    "start": "npm run cluster",
    "cluster": "pm2-dev pm2.json",
    "app:core": "nodemon --inspect --inspect-port=5900 ./app-core.js",
    "app:api": "nodemon --inspect --inspect-port=5901 ./app-api.js",
    "app:job": "nodemon --inspect --inspect-port=5902 ./app-job.js",
    "app:console": "node ./app-console.js",
    "app:console:debug": "nodemon --inspect --inspect-port=5999 ./app-console.js",
    "db:clear": "node ./scripts/db-clear.js;",
    "db:seed": "node ./scripts/db-seed.js;"
  },
  "dependencies": {
    "bull": "~3.4.8",
    "dotenv": "~6.1.0",
    "emiketic-starter-lib": "git+https://github.com/emiketic/emiketic-starter-lib.git#0.1.0",
    "express": "~4.16.4",
    "express-async-errors": "~3.1.1",
    "glob": "~7.1.3",
    "morgan": "~1.9.1",
    "node-schedule": "~1.3.0",
    "sails-mongo": "~1.0.1",
    "sails-redis": "~1.0.0",
    "uuid": "~3.3.2",
    "waterline": "~0.13.5"
  },
  "devDependencies": {
    "babel-eslint": "~10.0.1",
    "eslint": "~5.6.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "intl": "1.2.5",
    "intl-locales-supported": "1.0.0",
    "jest": "~23.6.0",
    "nodemon": "~1.18.4",
    "pm2": "~3.2.2",
    "prettier": "~1.14.3"
  }
}
