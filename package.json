{
  "private": true,
  "name": "emiketic-starter-express",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "./scripts/postinstall.sh",
    "lint": "eslint --ext .js ./",
    "lint:critical": "eslint --no-eslintrc --config .eslintrc.critical.json ./",
    "format": "npm run format:all ; npm run format:js",
    "format:all": "prettier ./**/*.{md,json,js,css,scss} --write",
    "format:js": "eslint --ext .js --fix ./ ; exit 0",
    "test": "jest",
    "start": "pm2-dev pm2.json",
    "app:console": "nodemon ./app-console.js",
    "app:console:debug": "nodemon --inspect --debug=5799 ./app-console.js",
    "app:job": "nodemon --inspect --debug=5801 ./app-job.js",
    "app:api": "nodemon --inspect --debug=5803 ./app-api.js",
    "db:reset": "node ./scripts/db-reset.js;",
    "db:seed": "node ./scripts/db-seed.js;"
  },
  "dependencies": {
    "dotenv": "~6.0.0",
    "emiketic-starter-lib": "git+https://github.com/emiketic/emiketic-starter-lib.git",
    "express": "~4.16.3",
    "express-async-errors": "~3.0.0",
    "glob": "~7.1.3",
    "morgan": "~1.9.1",
    "sails-mongo": "~1.0.1",
    "uuid": "~3.3.2",
    "waterline": "~0.13.5"
  },
  "devDependencies": {
    "babel-eslint": "~10.0.1",
    "eslint": "~5.6.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "intl": "1.2.5",
    "intl-locales-supported": "1.0.0",
    "jest": "~23.6.0",
    "nodemon": "~1.18.4",
    "prettier": "~1.14.3",
    "whatwg-fetch": "~3.0.0"
  }
}
