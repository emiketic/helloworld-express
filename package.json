{
  "private": true,
  "name": "starter-express",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "./scripts/postinstall.sh",
    "lint": "eslint --ext .js ./",
    "lint:critical": "eslint --no-eslintrc --config .eslintrc.critical.json ./",
    "format": "npm run format:all ; npm run format:js",
    "format:all": "prettier ./**/*.{md,json,js,css,scss} --write",
    "format:js": "eslint --ext .js --fix ./ ; exit 0",
    "test": "npm run test:unit ; npm run test:integration",
    "test:unit": "jest --runInBand \\.unit\\.test\\.",
    "test:integration": "jest --runInBand \\.integration\\.test\\.",
    "test:any": "jest --runInBand",
    "start": "npm run cluster",
    "cluster": "pm2-dev pm2.json",
    "app:core": "nodemon --inspect --inspect-port=5900 ./app-core.js",
    "app:api": "nodemon --inspect --inspect-port=5901 ./app-api.js",
    "app:job": "nodemon --inspect --inspect-port=5902 ./app-job.js",
    "app:console": "node ./app-console.js",
    "app:console:debug": "nodemon --inspect --inspect-port=5999 ./app-console.js",
    "db:clear": "node ./scripts/db-clear.js;",
    "db:seed": "node ./scripts/db-seed.js;",
    "docs": "npm run docs:jsdoc ; npm run docs:documentation ; npm run docs:apib ; npm run docs:postman",
    "docs:jsdoc": "jsdoc -r ./app/ -d ./docs/_jsdoc",
    "docs:documentation": "documentation build app/** -f html -o docs/_documentation",
    "docs:apib": "docker run -it --rm -u $(id -u) -v $PWD:/data emiketic/development aglio --theme-variables flatly -o /data/docs/_apib/index.html -i /data/docs/api/index.apib",
    "docs:postman": "docker run -it --rm -u $(id -u) -v $PWD:/data emiketic/development sh -c 'cat $(find /data/ -name *.apib) | apiary2postman blueprint > /data/docs/_postman/API.postman_collection.json'"
  },
  "dependencies": {
    "bcrypt": "~3.0.2",
    "bull": "~3.4.8",
    "dotenv": "~6.1.0",
    "express": "~4.16.4",
    "express-async-errors": "~3.1.1",
    "glob": "~7.1.3",
    "jsonwebtoken": "~8.3.0",
    "morgan": "~1.9.1",
    "node-schedule": "~1.3.0",
    "sails-disk": "~1.0.1",
    "sails-mongo": "~1.0.1",
    "sails-redis": "~1.0.0",
    "starter-lib": "git+https://github.com/emiketic/emiketic-starter-lib.git#0.3.1",
    "uuid": "~3.3.2",
    "waterline": "~0.13.5"
  },
  "devDependencies": {
    "babel-eslint": "~10.0.1",
    "documentation": "~8.1.2",
    "eslint": "~5.8.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "intl": "1.2.5",
    "intl-locales-supported": "1.0.0",
    "jest": "~23.6.0",
    "jsdoc": "~3.5.5",
    "nodemon": "~1.18.6",
    "pm2": "~3.2.2",
    "prettier": "~1.15.1"
  }
}
