{
  "private": true,
  "name": "starter-express",
  "version": "0.1.0",
  "engines": {
    "node": "^8.0.0 || ^10.0.0",
    "npm": "^5.0.0 || ^6.0.0"
  },
  "scripts": {
    "postinstall": "./scripts/postinstall.sh",
    "lint": "eslint --ext .js ./",
    "lint:critical": "eslint --no-eslintrc --config .eslintrc.critical.json ./",
    "format": "npm run format:all && npm run format:js",
    "format:all": "prettier './**/*.{md,json,js,css,scss}' --write",
    "format:js": "eslint -o /dev/null --ext .js --fix ./ || true",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --runInBand \\.unit\\.test\\.",
    "test:integration": "jest --runInBand \\.integration\\.test\\.",
    "test:any": "jest --runInBand",
    "start": "npm run app",
    "app": "pm2-dev pm2.json",
    "app:core": "nodemon --inspect --inspect-port=5900 ./app-core.js",
    "app:api": "nodemon --inspect --inspect-port=5901 ./app-api.js",
    "app:job": "nodemon --inspect --inspect-port=5902 ./app-job.js",
    "app:console": "node ./app-console.js",
    "app:console:debug": "nodemon --inspect --inspect-port=5999 ./app-console.js",
    "db:clear": "node ./scripts/db-clear.js;",
    "db:seed": "node ./scripts/db-seed.js;",
    "docs": "npm run docs:jsdoc ; npm run docs:apib ; npm run docs:postman",
    "docs:jsdoc": "jsdoc -c ./.jsdoc.json",
    "docs:apib": "docker run -it --rm -u $(id -u) -v $PWD:/data emiketic/development aglio --theme-variables flatly -o /data/docs/_apib/index.html -i /data/docs/api/index.apib",
    "docs:postman": "docker run -it --rm -u $(id -u) -v $PWD:/data emiketic/development sh -c 'cat $(find /data/ -name *.apib) | apiary2postman blueprint > /data/docs/_postman/API.postman_collection.json'"
  },
  "dependencies": {
    "bcrypt": "~3.0.4",
    "bull": "~3.7.0",
    "dotenv": "~6.2.0",
    "ejs": "~2.6.1",
    "express": "~4.16.4",
    "express-async-errors": "~3.1.1",
    "express-graphql": "~0.7.1",
    "glob": "~7.1.3",
    "graphql": "~14.1.1",
    "jsonwebtoken": "~8.4.0",
    "juice": "~5.1.0",
    "morgan": "~1.9.1",
    "node-schedule": "~1.3.2",
    "notifme-sdk": "~1.9.2",
    "redis": "~2.8.0",
    "sails-disk": "~1.1.0",
    "sails-mongo": "~1.0.1",
    "starter-lib": "git+https://github.com/emiketic/emiketic-starter-lib.git#0.7.0",
    "uuid": "~3.3.2",
    "waterline": "~0.13.6"
  },
  "devDependencies": {
    "babel-eslint": "~10.0.1",
    "eslint": "~5.14.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "~2.16.0",
    "jest": "~24.1.0",
    "jsdoc": "~3.5.5",
    "nodemon": "~1.18.10",
    "pm2": "~3.2.9",
    "prettier": "~1.16.4"
  }
}
